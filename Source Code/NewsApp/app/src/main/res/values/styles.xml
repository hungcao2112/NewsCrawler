<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="colorMenuItem" parent="AppTheme">
        <item name="android:textColorPrimary">@color/backgroundAppBarLayout</item>
        <item name="drawerArrowStyle">@style/changeColorDrawerToggle</item>
    </style>

    <style name="changeColorDrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/backgroundSearch</item>
    </style>

    <style name="capfalse" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="navigationTextCustom" parent="Widget.Design.NavigationView">
        <item name="android:textColor">@color/backgroundSearch</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
